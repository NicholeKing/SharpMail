<style type="text/css">
	.container {
		padding: 0;
		margin: 100px;
	}
	ul {
		list-style-type: none;
		margin: 0 auto;
		padding: 0;
	}
	ul li {
		font-size: 20px;
		border: 1px solid lightgray;
		margin: 0 auto;
		padding: 3px;
	}
</style>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="margin-bottom: 10px">
	<div class="mr-auto">
		<img class="navbar-brand" src="~/css/csharp_logo.png" width=50px>
		<h2 class="navbar-brand" style="color:white;">SharpMail</h2>
		<h2 class="navbar-brand">Hello @ViewBag.username.EName</h2>
	</div>
	<div class="mr-auto">
		<a href="/Inbox" class="nav-item btn btn-outline-light">Inbox (@ViewBag.counter)</a>
		<a href="/Deleted" class="nav-item btn btn-outline-light">Deleted</a>
		<a href="/Sent" class="nav-item btn btn-outline-light">Sent</a>
		<a href="/Compose" class="nav-item btn btn-outline-light">Compose</a>
	</div>
	<div>
		<div class="navbar-nav mr-auto">
			<a class="nav-item btn btn-outline-light" href="/logout" style="margin-right: 10px">Logout</a>
		</div>
	</div>
</nav>
<div class="container" style="margin-top: 20px;">
	<p>@ViewBag.message.Sender - @ViewBag.message.CreatedAt.ToString("MM/dd/yyyy - hh:mm tt")</p>
	<hr>
	<p style="white-space: pre;">@ViewBag.message.Content</p>
	@{
		if(@ViewBag.username.EName == ViewBag.message.Receiver)
		{
			if(@ViewBag.message.Deleted == false)
			{	
			<a href="/delete/@ViewBag.message.MailId" class="btn btn-danger">Delete</a>
			} else 
			{
			<a href="/permdelete/@ViewBag.message.MailId" class="btn btn-danger">Permanently Delete</a>
			}
		}
	}
</div>